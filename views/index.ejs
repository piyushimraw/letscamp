<% include partials/header%>
<div class="container">
	<h1>This page will show Camp Grounds</h1>
	<div class="row">
		<%campgrounds.forEach(function (ground) { %>
		
			<div class="col-lg-4">
				<div class="card text-center" style="width: 20rem;">
				  <img class="card-img-top" src="<%= ground.image%> " alt="Card image cap">
				  <div class="card-body">
				    <h4 class="card-title"><%= ground.name %></h4>
				    <p class="card-text"><%= ground.description.substring(0,100)%></p>
				    <a href="/campgrounds/<%= ground.id%>" class = "btn btn-primary"> More info</a>
				  </div>
				</div>
			</div>
		<% })%>
	</div>
</div>


<% include partials/footer%>
